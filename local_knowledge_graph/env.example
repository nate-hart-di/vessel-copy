# GitHub Token (required for private repositories)
GITHUB_TOKEN=your_github_token_here

# Optional: OpenAI API Key (for enhanced LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Other LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=qdrant  # Options: qdrant, chroma, lancedb
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Embedding Model (local model, no API required)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4000 
